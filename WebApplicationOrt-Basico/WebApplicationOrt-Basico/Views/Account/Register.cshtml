@model WebApplicationOrt_Basico.ViewModels.RegisterViewModel

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Apodo"></label>
        <input asp-for="Apodo" class="form-control" />
        <span asp-validation-for="Apodo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaInscripto"></label>
        <input asp-for="FechaInscripto" class="form-control" />
        <span asp-validation-for="FechaInscripto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genero"></label>
        <select asp-for="Genero" class="form-control">
            <option value="">Seleccione un género</option>
            <option value="1">Masculino</option>
            <option value="2">Femenino</option>
        </select>
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>